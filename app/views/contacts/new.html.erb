<h1 class="page_title">Di Holaaaa!</h1>
	<div class="skinny_wrapper wrapper_padding">
		<% form_for @contact do |f| %>
				<%= f.label :name %><br>
				<%= f.text_field :name, required: true %>
				<br>
				<br>
				<%= f.label :email %><br>
				<%= f.text_field :email, required: true %>
				<br>
				<br>
				<%= f.label :message %><br>
				<%= f.text_area :message, as: :text %>

				<div class="hidden">
					<%= f.label :nickname %><br>
					<%= f.text_field :nickname, hint: 'No dejar este campo en blanco' %>
				</div>
				<%= f.submit'Enviar un Mensaje', class: "button" %>
		<% end %>
	</div>