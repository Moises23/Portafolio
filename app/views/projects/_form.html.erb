<%= form_for @project do |f| %>
	<% if @project.errors.any? %>
		<h2><%= pluralize(@post.errors.count, "error") %>No se pudo guardar este Projecto:</h2>
			<ul>
				<% @project.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
	<% end %>
	<%= f.label :title %><br>
	<%= f.text_field :title %>
	<br>
	<br>
	<%= f.label :description, "Escribe tu descripción aquí" %><br>
	<%= f.text_area :description %>
	<br>
	<br>
	<%= f.label :link %><br>
	<%= f.text_area :link %>
	<br>
	<br>
<%= f.submit %>
<% end %>